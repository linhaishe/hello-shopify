<style>
  .collection-page {
    padding: 30px;
    max-width: 1200px;
    margin: 0 auto;
  }

  .collection-header h1 {
    font-size: 2rem;
    margin: 0 0 10px;
  }

  .collection-description {
    color: #666;
    margin-bottom: 20px;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }

  .product-card {
    border: 1px solid #eee;
    padding: 10px;
    background: #fff;
    transition: box-shadow .15s;
  }

  .product-card:hover {
    box-shadow: 0 4px 14px rgba(0,0,0,.08);
  }

  .product-card img {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
  }

  .product-info {
    padding-top: 8px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .product-title {
    font-size: 1rem;
    margin: 0;
  }

  .product-price {
    font-weight: 600;
    color: #111;
  }

  .pagination {
    margin-top: 20px;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  .pagination a,
  .pagination span {
    padding: 6px 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    text-decoration: none;
    color: inherit;
  }

  .pagination .current {
    background: #111;
    color: #fff;
    border-color: #111;
  }

  @media (max-width: 900px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .products-grid {
      grid-template-columns: 1fr;
      gap: 12px;
    }
  }
</style>


<h1>{{ collection.title }}</h1>

{% if collection.description != blank %}
  <div class="collection-description">
    {{ collection.description }}
  </div>
{% endif %}

<div class="products-grid">
  {% for product in collection.products %}
    <article class="product-card">
      <a
        href="{{ product.url }}"
        class="product-link"
        aria-labelledby="product-{{ product.id }}-title"
      >
        {% if product.featured_image %}
          <img
            src="{{ product.featured_image | img_url: '600x600' }}"
            alt="{{ product.title }}"
          >
        {% else %}
          <img
            src="{{ 'no-image.svg' | asset_url }}"
            alt="{{ product.title }}"
          >
        {% endif %}

        <div class="product-info">
          <h2
            id="product-{{ product.id }}-title"
            class="product-title"
          >
            {{ product.title }}
          </h2>

          <span class="product-price">
            {{ product.price_min | money }}
          </span>
        </div>
      </a>
    </article>
  {% endfor %}
</div>

{% schema %}
{
    "name": "Main collection",
    "settings": [],
    "blocks": [],
    "presets": [
        {
            "name": "Main collection",
            "category": "Collection"
        }
    ]
}
{% endschema %}