{% comment %} templates/page.liquid - simple page template with title and content {% endcomment %}
<style>
    /* 保持换行并限制内容宽度 */
    .page-content {
        white-space: pre-wrap;
        overflow-wrap: break-word;
        word-break: break-word;
        max-width: 760px;
        margin: 0 auto;
    }
    .page-template {
        max-width: 900px;
        margin: 48px auto;
        padding: 0 16px;
        font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        color: #111;
    }

    .page-title {
        font-size: 2rem;
        margin: 0 0 12px;
        line-height: 1.2;
        font-weight: 600;
    }

    .page-divider {
        height: 1px;
        background: #e6e6e6;
        border: none;
        margin: 12px 0 20px;
    }

    .page-content {
        font-size: 1rem;
        color: #333;
        line-height: 1.6;
    }

    @media (min-width: 768px) {
        .page-template { padding: 0; }
        .page-title { font-size: 2.5rem; }
    }
</style>

<main class="page-template" role="main" aria-labelledby="page-title">
    {% if page.title %}
        <h1 id="page-title" class="page-title">{{ page.title }}</h1>
    {% endif %}

    <hr class="page-divider" />

    <div class="page-content">
        {{ page.content }}
    </div>
</main>