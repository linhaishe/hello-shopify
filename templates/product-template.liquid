<style>
    .product-page {
        display: flex;
        gap: 40px;
        align-items: flex-start;
        padding: 40px;
        box-sizing: border-box;
        max-width: 1200px;
        margin: 0 auto;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial;
    }

    .product-media {
        flex: 1 1 50%;
        min-width: 300px;
    }

    .product-media img {
        width: 100%;
        height: auto;
        border-radius: 8px;
        object-fit: cover;
        display: block;
    }

    .product-details {
        flex: 1 1 50%;
        min-width: 300px;
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .product-title {
        font-size: 28px;
        font-weight: 700;
        margin: 0;
    }

    .product-price {
        font-size: 22px;
        color: #111;
        font-weight: 600;
    }

    .product-description {
        color: #444;
        line-height: 1.5;
    }

    .add-to-cart {
        margin-top: 12px;
    }

    .add-to-cart button {
        background: #111;
        color: #fff;
        border: none;
        padding: 12px 18px;
        font-size: 16px;
        border-radius: 6px;
        cursor: pointer;
    }

    .add-to-cart button[disabled] {
        opacity: 0.5;
        cursor: default;
    }

    @media (max-width: 800px) {
        .product-page {
            flex-direction: column;
            padding: 20px;
        }

        .product-media,
        .product-details {
            min-width: auto;
        }
    }
</style>

<div class="product-page">
    <div class="product-media">
        {% if product and product.featured_image %}
            <img src="{{ product.featured_image.src | img_url: '800x800' }}" alt="{{ product.title }}">
        {% else %}
            <img src="https://via.placeholder.com/800x800?text=Product+Image" alt="Placeholder product image">
        {% endif %}
    </div>

    <div class="product-details">
        <h1 class="product-title">
            {% if product %}
                {{ product.title }}
            {% else %}
                Sample Product Title
            {% endif %}
        </h1>

        <div class="product-price">
            {% if product %}
                {% assign variant = product.selected_or_first_available_variant %}
                {{ variant.price | money }}
            {% else %}
                $29.99
            {% endif %}
        </div>

        <div class="product-description">
            {% if product and product.description != blank %}
                {{ product.description }}
            {% else %}
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent vitae eros eget tellus tristique bibendum. Donec rutrum sed sem quis venenatis.</p>
            {% endif %}
        </div>

        <div class="add-to-cart">
            {% if product %}
                {% comment %} <form method="post" action="/cart/add"></form> {% endcomment %}
                {% form 'product', product %}
                    {% if product.variants.size > 1 %}
                        <label for="ProductSelect">Variant</label>
                        <select id="ProductSelect" name="id">
                            {% for variant in product.variants %}
                                <option value="{{ variant.id }}" {% unless variant.available %}disabled{% endunless %}>
                                    {{ variant.title }} â€” {{ variant.price | money }} {% unless variant.available %}(Sold out){% endunless %}
                                </option>
                            {% endfor %}
                        </select>
                    {% else %}
                        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                    {% endif %}

                    <button type="submit" {% unless product.available %}disabled{% endunless %}>
                        {% if product.available %}Add to cart{% else %}Sold out{% endif %}
                    </button>
                {% endform %}
            {% else %}
                <button disabled>Add to cart</button>
            {% endif %}
        </div>
    </div>
</div>