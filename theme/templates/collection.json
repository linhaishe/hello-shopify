{
  "name": "collection",
  "settings": {
    "title": "Collection",
    "description": "A collection page that displays a group of products.",
    "image": {
      "type": "image_picker",
      "label": "Collection Image"
    },
    "products_per_page": {
      "type": "number",
      "label": "Products per Page",
      "default": 12
    }
  },
  "sections": {
    "collection-header": {
      "type": "collection-header",
      "settings": {
        "show_title": true,
        "show_description": true
      }
    },
    "product-grid": {
      "type": "product-grid",
      "settings": {
        "show_vendor": true,
        "show_price": true
      }
    }
  },
  "presets": [
    {
      "name": "Default collection",
      "category": "Collection"
    }
  ]
}