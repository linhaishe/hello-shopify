<div class="hero-section">
  <div class="hero-content">
    <h1>{{ section.settings.hero_title }}</h1>
    <p>{{ section.settings.hero_subtitle }}</p>
    <a href="{{ section.settings.cta_link }}" class="btn">{{ section.settings.cta_text }}</a>
  </div>
  <div class="hero-image">
    <img src="{{ section.settings.hero_image | img_url: '2048x2048' }}" alt="{{ section.settings.hero_title }}">
  </div>
</div>

<style>
  .hero-section {
    position: relative;
    text-align: center;
    color: white;
  }
  .hero-image img {
    width: 100%;
    height: auto;
  }
  .hero-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Title",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Hero Subtitle",
      "default": "Discover our latest products"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA Link",
      "default": "#"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Shop Now"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    }
  ]
}
{% endschema %}